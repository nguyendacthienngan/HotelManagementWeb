<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Arrivaldate</th>
      <th>Leavedate</th>
      <th>Checkindate</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.status %></td>
        <td><%= reservation.arrival_date %></td>
        <td><%= reservation.leave_date %></td>
        <td><%= reservation.check_in_date %></td>
        <td><%= reservation.total %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', reservations_new_path %>
