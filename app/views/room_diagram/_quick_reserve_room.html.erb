<%= form_with model: @reservation  do |form| %>
  <table class="table">
    <tbody>
    <tr>
      <td>
        <div class="d-flex justify-content-end">
          <p class="col-3">Tên khách</p>
          <div class="col-7 form-group">
            <%= form.text_field :client_name, class:"form-control", autofocus: true, placeholder: "Nguyễn Văn A" %>
<!--            <small id="emailHelp" class="form-text text-muted">Email helpers</small>-->
          </div>
        </div>
      </td>
      <td>
        <div class="d-flex d-flex">
          <p class="col-3">CCCD</p>
          <div class="col-7 form-group">
            <%= form.text_field :client_citizen_id, class:"form-control", autofocus: true, placeholder: "0123456789" %>
<!--            <small id="emailHelp" class="form-text text-muted">Email helpers</small>-->
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="d-flex d-flex justify-content-end">
          <p class="col-3">Loại phòng</p>
          <div class="col-7 form-group">
            <%= form.label @room_type_name, class:"form-control", readonly:true %>
<!--            <small id="emailHelp" class="form-text text-muted">Email helpers</small>-->
          </div>
        </div>
      </td>
      <td>
        <div class="d-flex d-flex">
          <p class="col-3">Phòng</p>
          <div class="col-7 form-group">
            <%= form.label @room_name, class:"form-control", readonly:true %>
<!--            <small id="emailHelp" class="form-text text-muted">Email helpers</small>-->
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="d-flex d-flex justify-content-end">
          <p class="col-3">Ngày đến</p>
          <div class="col-7 form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">Email helpers</small>
          </div>
        </div>
      </td>
      <td>
        <div class="d-flex d-flex">
          <p class="col-3">Giá</p>
          <div class="col-7 form-group">
            <%= form.label @room_price, class:"form-control", readonly:true %>
<!--            <small id="emailHelp" class="form-text text-muted">Email helpers</small>-->
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="d-flex justify-content-end">
          <p class="col-3">Ngày đi</p>
          <div class="col-7 form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">Email helpers</small>
          </div>
        </div>
      </td>
      <td>
        <div class="d-flex">
          <p class="col-3">Đặt cọc</p>
          <div class="col-7 form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">Email helpers</small>
          </div>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="d-flex justify-content-end">
          <p class="col-3">Hình thức TT</p>
          <div class="col-7 form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">Email helpers</small>
          </div>
        </div>
      </td>
      <td>
        <div class="d-flex">
          <p class="col-3">Người lớn</p>
          <div class="col-7 form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">Email helpers</small>
          </div>
        </div>
      </td>
    </tr>
    </tbody>
  </table>
<% end %>