<p id="notice"><%= notice %></p>

<h1>Room Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hour price</th>
      <th>Date price</th>
      <th>Past night price</th>
      <th>Week price</th>
      <th>Month price</th>
      <th>Add adult price</th>
      <th>Add child price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_types.each do |room_type| %>
      <tr>
        <td><%= room_type.name %></td>
        <td><%= room_type.hour_price %></td>
        <td><%= room_type.date_price %></td>
        <td><%= room_type.past_night_price %></td>
        <td><%= room_type.week_price %></td>
        <td><%= room_type.month_price %></td>
        <td><%= room_type.add_adult_price %></td>
        <td><%= room_type.add_child_price %></td>
        <td><%= room_type.description %></td>
        <td><%= link_to 'Show', room_type %></td>
        <td><%= link_to 'Edit', edit_room_type_path(room_type) %></td>
        <td><%= link_to 'Destroy', room_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

