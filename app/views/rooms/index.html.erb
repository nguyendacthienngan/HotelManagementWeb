<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Beds</th>
      <th>Status</th>
      <th>Floor</th>
      <th>Capacity</th>
      <th>Price</th>
      <th>Roomtype</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.status %></td>
        <td><%= room.floor %></td>
        <td><%= room.room_type_id %></td>
        <td><%= room.description %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

