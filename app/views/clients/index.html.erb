<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Citizen</th>
      <th>Is female</th>
      <th>Nationality</th>
      <th>Date of birth</th>
      <th>Email</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.citizen_id %></td>
        <td><%= client.is_female %></td>
        <td><%= client.nationality %></td>
        <td><%= client.date_of_birth %></td>
        <td><%= client.email %></td>
        <td><%= client.client_type %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

