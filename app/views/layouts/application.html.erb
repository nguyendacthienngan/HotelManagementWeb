<!DOCTYPE html>
<html>
  <head>
    <title>HotelManagementWebRubyonrails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('favicon.png') %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bs-stepper/dist/css/bs-stepper.min.css" rel="stylesheet" >
    <script src="https://cdn.jsdelivr.net/npm/bs-stepper/dist/js/bs-stepper.min.js"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'bootstrap' %>
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

  </head>

  <body>
  <% if user_signed_in? %>
    <div class="wrapper d-flex align-items-stretch">
      <nav id="sidebar">
        <%= render 'layouts/sidebar' %>
      </nav>
      <!-- Page Content  -->

      <div id="content" class="p-4 p-md-5 pt-5">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page">
              <p><%= render_breadcrumbs separator: " > " %></p>
            </li>
          </ol>
        </nav>
        <% if notice %>
          <%= render 'layouts/alerts' %>
        <% end %>

        <%= yield %>
      </div>
    </div>
  <% else %>
    <%= yield %>
  <% end %>

  <%= render 'layouts/footer' %>

  <script>
        var path = window.location.pathname
        // console.log(path)
        if (path === '/' || path === '' ) {
            $('#home').addClass('active')
        }
        if (path === '/room_diagram') {
            $('#room_diagram').addClass('active')
        }
        if (path === '/service_room') {
            $('#services').addClass('active')
        }
        if (path === '/order_service') {
            $('#order_service').addClass('active')
        }
        if (path === '/reservations') {
            $('#individual').addClass('active')
        }
        if (path === '/cooperate_reservation') {
            $('#cooperate').addClass('active')
        }
        if (path === '/rooms') {
            $('#setting_rooms').addClass('active')
        }
        if (path === '/room_types') {
            $('#setting_room_types').addClass('active')
        }
        if (path === '/services') {
            $('#setting_services').addClass('active')
        }
        if (path === '/room_prices') {
            $('#setting_room_prices').addClass('active')
        }
        if (path === '/employees') {
            $('#setting_employees').addClass('active')
        }
        if (path === '/clients') {
            $('#setting_clients').addClass('active')
        }
        if (path === '/users/edit') {
            $('#profile').addClass('active')
        }
        if (path === '/room_types') {
            $('#setting_room_types').addClass('active')
        }
        var params = window.location.search;
        if (params === '?filter=1') {
            console.log("FILTER ")
            $('#switcher1').addClass('btn-primary')
            $('#switcher1').removeClass('inactive')
            $('#switcher2').addClass('inactive')
            $('#switcher2').removeClass('btn-primary')
        }
        if (params === '?filter=2') {
            $('#switcher2').addClass('btn-primary')
            $('#switcher2').removeClass('inactive')
            $('#switcher1').addClass('inactive')
            $('#switcher1').removeClass('btn-primary')
        }
        var fullHeight = function() {

            $('.js-fullheight').css('height', $(window).height());
            $(window).resize(function(){
                $('.js-fullheight').css('height', $(window).height());
            });

        };
        fullHeight();

        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
        });
  </script>
  </body>
</html>
